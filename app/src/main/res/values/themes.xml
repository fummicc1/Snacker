<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Snacker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/white</item>-->
<!--        <item name="colorSecondaryVariant">@color/white</item>-->
<!--        <item name="colorOnSecondary">@color/white</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/brown</item>
        <item name="android:navigationBarColor">@color/brown</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="android:actionButtonStyle">@style/MyActionButton</item>
    </style>

    <style name="MyActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:colorPrimary">?attr/colorOnPrimary</item>
        <item name="android:elevation">8dp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">8</item>
        <item name="android:background">@drawable/my_toolbar_shape</item>
        <item name="android:colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MyAppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MyTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
    </style>

    <style name="MyTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="MyTextInputEditLayout" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:elevation">8dp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-8</item>
        <item name="android:background">@drawable/my_bottom_navigation_view_shape</item>
    </style>
</resources>